<syncfusion:RibbonWindow x:Class="DiagramBuilder_2010.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Icon="/Resources/Diagram.ico"
    Title="Diagram Builder" Name="mainwindow" Loaded="ribbonwindow_Loaded" WindowState="Maximized"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
    xmlns:syncshared="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.Wpf"    
    xmlns:local="clr-namespace:DiagramBuilder_2010"  Closing="mainwindow_Closing">
    <syncfusion:RibbonWindow.Resources>
        <ResourceDictionary>
            <!--Gets the resources from the Shared Library-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/Computer.xaml" />
                <ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/General.xaml" />
                <ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/Construction.xaml" />
                <ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/Education.xaml" />
                <ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/Outlook2007Icons.xaml"/>
                <ResourceDictionary Source="/DiagramBuilder_2010;component/ThemeBrushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="Convert"></BooleanToVisibilityConverter>
            <local:ColorToBrushConverter x:Key="BrushConversion"></local:ColorToBrushConverter>
            <!-- RibbonMenuItem -->
            <Style x:Key="MenuItemStyle" TargetType="syncfusion:RibbonMenuItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="syncfusion:RibbonMenuItem">
                            <ContentPresenter Content="{TemplateBinding Header}"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Button Style -->
            <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                <Setter Property="Padding" Value="2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3" Name="ButtonBorder">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFDCC17B" Offset="1"/>
                                    <GradientStop Color="#FFE5D772"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFFFF7CB" Offset="0.01"/>
                                    <GradientStop Color="#FFFFEAA5" Offset="0.311"/>
                                    <GradientStop Color="#FFFFD75D" Offset="0.39"/>
                                    <GradientStop Color="#FFFFD456" Offset="0.743"/>
                                    <GradientStop Color="#FFFEEAB0" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!-- Node Style -->
            <Style TargetType="syncfusion:Node">
                <Style.Triggers>
                    <!-- Style Trigger -->
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.ShapeStyle).IsPreview}" Value="False">
                        <DataTrigger.Setters>
                            <Setter Property="CustomPathStyle">
                                <Setter.Value>
                                    <Style TargetType="Path">
                                        <Setter Property="Stretch" Value="Fill"/>
                                        <Setter Property="Fill" Value="{Binding Path=(local:Window1.ShapeStyle).Fill}"/>
                                        <Setter Property="Stroke" Value="{Binding Path=(local:Window1.ShapeStyle).Stroke}"/>
                                        <Setter Property="StrokeThickness" Value="{Binding Path=(local:Window1.ShapeStyle).StrokeThickness}"/>
                                        <Setter Property="Effect" Value="{Binding Path=(local:Window1.ShapeStyle).Effect}"/>
                                        <Setter Property="StrokeDashArray" Value="{Binding Path=(local:Window1.ShapeStyle).StrokeDashArray}"/>
                                        <Setter Property="StrokeDashCap" Value="{Binding Path=(local:Window1.ShapeStyle).StrokeDashCap}"/>
                                    </Style>
                                </Setter.Value>
                            </Setter>                            
                        </DataTrigger.Setters>
                    </DataTrigger>
                    <!-- Preview Trigger -->
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.PreviewShapeStyle).IsPreview}" Value="True">
                        <DataTrigger.Setters>
                            <Setter Property="CustomPathStyle">
                                <Setter.Value>
                                    <Style TargetType="Path">
                                        <Setter Property="Stretch" Value="Fill"/>
                                        <Setter Property="Fill" Value="{Binding Path=(local:Window1.PreviewShapeStyle).Fill}"/>
                                        <Setter Property="Stroke" Value="{Binding Path=(local:Window1.PreviewShapeStyle).Stroke}"/>
                                        <Setter Property="StrokeThickness" Value="{Binding Path=(local:Window1.PreviewShapeStyle).StrokeThickness}"/>
                                        <Setter Property="Effect" Value="{Binding Path=(local:Window1.PreviewShapeStyle).Effect}"/>
                                        <Setter Property="StrokeDashArray" Value="{Binding Path=(local:Window1.PreviewShapeStyle).StrokeDashArray}"/>
                                        <Setter Property="StrokeDashCap" Value="{Binding Path=(local:Window1.PreviewShapeStyle).StrokeDashCap}"/>
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger.Setters>
                    </DataTrigger >
                </Style.Triggers>
                <!-- Label Style -->
                <Setter Property="CustomPathStyle" Value="{Binding Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type syncfusion:DiagramControl}}, Path=(local:Window1.CustomPathStyle)}"/>
                <Setter Property="LabelBackground" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelBackground}"/>
                <Setter Property="LabelFontFamily" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelFontFamily}"/>
                <Setter Property="LabelFontSize" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelFontSize}"/>
                <Setter Property="LabelFontStyle" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelFontStyle}"/>
                <Setter Property="LabelFontWeight" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelFontWeight}"/>
                <Setter Property="LabelForeground" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelForeground}"/>
                <Setter Property="LabelHorizontalAlignment" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelHorizontalAlignment}"/>
                <Setter Property="LabelTextAlignment" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelTextAlignment}"/>
                <Setter Property="LabelTextWrapping" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelTextWrapping}"/>
                <Setter Property="LabelVerticalAlignment" Value="{Binding  RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelVerticalAlignment}"/>
                <Setter Property="LabelBackground" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelBackground}"/>
                <Setter Property="LabelTextDecorations" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=(local:Window1.TextStyles).LabelTextDecorations}"/>
            </Style>

            <ObjectDataProvider x:Key="ThemeValues" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="syncfusion:Themes"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="StyleValues" MethodName="GetValues" ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="syncfusion:Themes"/>                    
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </syncfusion:RibbonWindow.Resources>

    <Grid x:Name="GridRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="7.25*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!--Diagram Control-->
        <Border  Grid.Row="2">
            <syncfusion:DiagramControl syncfusion:SkinStorage.VisualStyle="Office2007Blue" BorderThickness="1" BorderBrush="DarkBlue" Grid.Column="1" Name="diagramControl1" IsSymbolPaletteEnabled="{Binding Path=SymbolPaletteEnable,Mode=TwoWay}">
                <syncfusion:DiagramControl.Model>
                    <syncfusion:DiagramModel   x:Name="diagramModel1" >
                    </syncfusion:DiagramModel>
                </syncfusion:DiagramControl.Model>
                <syncfusion:DiagramControl.View>
                    <syncfusion:DiagramView Bounds="0,0,1200,1200" Name="diagramView1" ShowHorizontalGridLine="{Binding Path=HorizantalLines,Mode=TwoWay}" ShowVerticalGridLine="{Binding Path=VerticalLines}" IsZoomEnabled="{Binding Path=ZoomEnabled,Mode=TwoWay}" IsPanEnabled="{Binding Path=PanEnabled,Mode=TwoWay}" IsPageEditable="{Binding Path=PageEdit,Mode=TwoWay}" SnapOffsetX="{Binding ElementName=Snapoffsetx,Path=Text}" SnapToHorizontalGrid="{Binding ElementName=SnapY,Path=IsSelected}" SnapOffsetY="{Binding ElementName=Snapoffsety,Path=Text}" SnapToVerticalGrid="{Binding ElementName=SnapX,Path=IsSelected}">
                        <syncfusion:DiagramView.HorizontalRuler>
                            <syncfusion:HorizontalRuler Name="horizontalRuler1" Background="#FFC6C6C6"  Visibility="{Binding Path=HorizantalRulers, Converter={StaticResource ResourceKey=Convert},Mode=TwoWay}"/>
                        </syncfusion:DiagramView.HorizontalRuler>
                        <syncfusion:DiagramView.VerticalRuler>
                            <syncfusion:VerticalRuler    Name="verticalRuler1" Background="#FFC6C6C6" Visibility="{Binding Path=VerticalRulers, Converter={StaticResource ResourceKey=Convert},Mode=TwoWay}" />
                        </syncfusion:DiagramView.VerticalRuler >
                    </syncfusion:DiagramView>
                </syncfusion:DiagramControl.View>
            </syncfusion:DiagramControl>
        </Border>

        <syncfusion:Ribbon Name="MyRibbon">
            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar Name="QuickAccessTool">
                    <syncfusion:RibbonButton SmallIcon="{StaticResource QATUndo}" Label="" ToolTip="Undo" Command="syncfusion:DiagramCommandManager.Undo"  CommandTarget="{Binding ElementName=diagramView1}" CommandParameter="{Binding ElementName=diagramPage}"></syncfusion:RibbonButton>
                    <syncfusion:RibbonButton SmallIcon="{StaticResource QATRedo}" Label="" ToolTip="Redo" Command="syncfusion:DiagramCommandManager.Redo"  CommandTarget="{Binding ElementName=diagramView1}" CommandParameter="{Binding ElementName=diagramPage}"></syncfusion:RibbonButton>
                    <syncfusion:RibbonButton SmallIcon="{StaticResource Print}" Label="" ToolTip="Print"  Click="P1_Click"></syncfusion:RibbonButton>
                    <syncfusion:RibbonButton SmallIcon="{StaticResource QATSave}" Click="S_Click" Label="" ToolTip="Save"></syncfusion:RibbonButton>
                    <syncfusion:RibbonButton SmallIcon="{StaticResource OpenFolder}" Click="L_Click" Label="" ToolTip="Load"></syncfusion:RibbonButton>
                </syncfusion:QuickAccessToolBar>
            </syncfusion:Ribbon.QuickAccessToolBar>

            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage Name="RibbonBackStage" IsVisibleChanged="OnUpdatePrintPreview">
                    <syncfusion:BackStageCommandButton Margin="10,10,0,0" Header=" Open" Icon="/Resources/Open.png" SizeForm="ExtraSmall" Click="L_Click"/>
                    <syncfusion:BackStageCommandButton Margin="10,0,0,0"  Header=" Save" Icon="/Resources/Save.png" SizeForm="ExtraSmall" Click="S_Click"/>
                    <syncfusion:BackstageTabItem  Header="   Save As">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="#FFD7D7D7" BorderThickness="0,0,0.5,0">
                                <StackPanel Orientation="Vertical" Margin="30,25,0,0">
                                    <TextBlock Text="Save in another format" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Click="XAMLbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource xaml}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="XAML" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as XAML format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Click="BMPbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource bmp}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="BitMap" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as BMP format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Click="JPEGbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource jpeg}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="JPEG" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as JPG format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                        <Button Click="PNGbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource png}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="PNG" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as PNG format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                        <Button Click="TIFGbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource tif}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="TIF" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as TIF format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                        <Button Click="GIFbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource gif}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="GIF" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as GIF format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                        <Button Click="WDPbtn_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource wdp}" Height="50" Width="50"/>
                                                    <!--<TextBlock Margin="0,10,0,0" Text="WDP" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>-->
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBlock Text="Save as WDP format in your computer." VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackstageTabItem Header="   New" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="#FFD7D7D7" BorderThickness="0,0,0.5,0">
                                <StackPanel Orientation="Vertical" Margin="30,25,0,0">
                                    <TextBlock Text="Available Templates" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <syncfusion:RibbonButton Name="blankDocument" Height="80" Width="80" Label="Blank Document" IsSelected="True" IsToggle="True" SizeForm="Large" Click="OnBlankDocument" LargeIcon="{StaticResource NewPage}" ToolTip="Blank Document">
                                        </syncfusion:RibbonButton>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Grid Grid.Column="1">
                                <StackPanel Orientation="Vertical" Margin="30,25,0,0">
                                    <TextBlock Text="Blank Document" FontSize="13" FontWeight="Bold"/>
                                    <Border Margin="0,10,0,0" BorderBrush="Black" BorderThickness="0.5" Background="White" Width="262" Height="338" HorizontalAlignment="Left">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FFC7C8C9" BlurRadius="3"/>
                                        </Border.Effect>
                                        <Rectangle x:Name="Rect"/>
                                    </Border>
                                    <Button Margin="0,20,0,0" Click="OnCreate" Height="80" Width="80" HorizontalAlignment="Left">
                                        <Button.Content>
                                            <StackPanel Orientation="Vertical">
                                                <Image Source="{StaticResource NewPage}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="25"/>
                                                <TextBlock Margin="0,10,0,0" Text="Create" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackstageTabItem Header="   Print" Loaded="OnPrintLoad">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="#FFD7D7D7" BorderThickness="0,0,0.5,0">
                                <StackPanel Orientation="Vertical" Margin="30,25,0,0">
                                    <TextBlock Text="Print" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                    <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                        <Button Click="P_Click" Height="80" Width="80" HorizontalAlignment="Left">
                                            <Button.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <Image Source="{StaticResource Print}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="25"/>
                                                    <TextBlock Margin="0,10,0,0" Text="Print" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>                                        
                                    </StackPanel>

                                    <StackPanel Margin="0,20,0,0">
                                        <TextBlock Text="Color Options" FontSize="13" FontWeight="Bold"/>
                                        <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                        <StackPanel Orientation="Vertical">
                                            <RadioButton  Margin="0,10,0,0" IsChecked="True" Click="OnColorClick">
                                                <TextBlock Text="Color Mode"/>
                                            </RadioButton>
                                            <RadioButton  Margin="0,10,0,0" Click="OnBlackAndWhiteClick">
                                                <TextBlock Text="Black And White Mode"/>
                                            </RadioButton>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Margin="0,20,0,0">
                                        <TextBlock Text="Print Stretch" FontSize="13" FontWeight="Bold"/>
                                        <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                        <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Left">
                                            <ComboBox  Margin="0,10,0,0" Name="cb1" SelectionChanged="OnPrintStretch">
                                                <ComboBoxItem Content="Fill"/>
                                                <ComboBoxItem Content="None"/>
                                                <ComboBoxItem Content="Uniform"/>
                                                <ComboBoxItem Content="UniformToFill"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Grid Grid.Column="1">
                                <Border VerticalAlignment="Center" BorderBrush="OrangeRed" BorderThickness="0.5" HorizontalAlignment="Center"
              Background="White"  Width="565" Height="730">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FFC7C8C9" BlurRadius="6"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Rectangle x:Name="PreviewRect" Margin="10"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackstageTabItem Header="   Help">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="#FFD7D7D7" BorderThickness="0,0,0.5,0">
                                <StackPanel Orientation="Vertical" Margin="30,25,0,0">
                                    <TextBlock Text="Support" FontSize="13" FontWeight="Bold"/>
                                    <TextBlock Text="------------------------------------------------------------------------------    " Foreground="#FFC7C8C9" FontWeight="Bold"/>
                                    <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal"  Margin="0,10,0,0">
                                            <Button HorizontalContentAlignment="Left" Name="Support" Click="Support_Click" Height="80" Width="380" HorizontalAlignment="Left">
                                                <Button.Content>
                                                    <StackPanel HorizontalAlignment="Left"  Orientation="Horizontal">
                                                        <Image Source="{StaticResource Help1}" Height="60" Width="60" HorizontalAlignment="Left"/>
                                                        <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                                            <TextBlock Margin="10,0,0,0" FontWeight="Bold" FontSize="12" Text="Essential Diagram Help" />
                                                            <TextBlock Margin="10,5,0,0"  Text="Get help using Essential Diagram."/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                            <Button HorizontalContentAlignment="Left" Name="EssentialFeature"  Click="EssentialFeature_Click"  Height="80" Width="380" HorizontalAlignment="Left">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Image Height="60" Width="60" Source="{StaticResource Feature1}" HorizontalAlignment="Left" ></Image>
                                                        <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                                            <TextBlock FontSize="12" FontWeight="Bold" Text="Features Overview"  Margin="10,0,0,0"/>
                                                            <TextBlock   Text="See Essenital Diagram features and learn the"  Margin="10,5,0,0"/>
                                                            <TextBlock   Text="basics quickly."  Margin="10,0,0,0"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                                            <Button HorizontalContentAlignment="Left" Name="ContactUs" Click="ContactUs_Click"  Height="80" Width="380" HorizontalAlignment="Left">
                                                <Button.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Height="60" Width="60" Source="{StaticResource Contact1}" HorizontalAlignment="Left" />
                                                        <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                                            <TextBlock FontWeight="Bold" FontSize="12" Text="Contact Us"  Margin="10,0,0,0"/>
                                                            <TextBlock TextWrapping="Wrap" Text="Let us know if you need help or how we can make"  Margin="10,5,0,0"/>
                                                            <TextBlock TextWrapping="Wrap" Text="Essential Diagram better."  Margin="10,0,0,0"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                       
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </syncfusion:BackstageTabItem>

                    <syncfusion:BackStageCommandButton Margin="10,0,0,0" Header=" Close" Icon="/Resources/Close.png" SizeForm="ExtraSmall" Name="close" Click="close_Click"/>
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>

            <syncfusion:RibbonTab Name="diagramTab" IsChecked="False" Caption="Diagram" FontWeight="Regular">
