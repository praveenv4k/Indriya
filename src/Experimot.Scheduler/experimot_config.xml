<?xml version="1.0" encoding="utf-8" ?>
<experimot_config>
  <nodes>
    <node>
      <name>localization</name>
      <process>
        <type>executable</type>
        <path>%DEV_SDK_ROOT%\experimot\bin\experimot_localization.exe</path>
        <args></args>
      </process>
      <publishers>
        <publish>
          <protocol>tcp</protocol>
          <address>*</address>
          <port>5566</port>
          <topic>TPP</topic>
          <message>Pose</message>
          <task>TorsoPosePublisher</task>
        </publish>
      </publishers>
      <subscribers>
        <subscribe>
          <protocol>tcp</protocol>
          <address>127.0.0.1</address>
          <port>5563</port>
          <topic>RSP</topic>
          <message>JointValueVector</message>
          <task>RobotStateListener</task>
        </subscribe>
      </subscribers>
    </node>
    <node>
      <name>gesture_recognition</name>
      <process>
        <type>executable</type>
        <path>%DEV_SDK_ROOT%\experimot\bin\ExperimotPerception.exe</path>
        <args></args>
      </process>
      <publishers>
        <publish>
          <protocol>tcp</protocol>
          <address>*</address>
          <port>5564</port>
          <topic>KSP</topic>
          <message>KinectBodies</message>
          <task>KinectBodyPublisher</task>
        </publish>
      </publishers>
    </node>
    <node>
      <name>simulation</name>
      <process>
        <type>executable</type>
        <path>%DEV_SDK_ROOT%\experimot\bin\experimot_rave.exe</path>
        <args></args>
      </process>
      <subscribers>
        <subscribe>
          <protocol>tcp</protocol>
          <address>127.0.0.1</address>
          <port>5564</port>
          <topic>RSP</topic>
          <message>JointValueVector</message>
          <task>RobotStateListener</task>
        </subscribe>
        <subscribe>
          <protocol>tcp</protocol>
          <address>127.0.0.1</address>
          <port>5566</port>
          <topic>TPP</topic>
          <message>Pose</message>
          <task>TorsoPoseListener</task>
        </subscribe>
        <subscribe>
          <protocol>tcp</protocol>
          <address>127.0.0.1</address>
          <port>5563</port>
          <topic>KSP</topic>
          <message>KinectBodies</message>
          <task>KinectStateListener</task>
        </subscribe>
      </subscribers>
    </node>
    <node>
      <name>robot_interface</name>
      <!--<process>
        <type>python</type>
        <path>%DEV_SDK_ROOT%\experimot\scripts\ReadJointValues.py</path>
        <args></args>
      </process>-->
      <process>
        <type>executable</type>
        <path>python.exe</path>
        <args>%DEV_SDK_ROOT%\experimot\scripts\ReadJointValues.py</args>
      </process>
      <publishers>
        <publish>
          <protocol>tcp</protocol>
          <address>*</address>
          <port>5563</port>
          <topic>RSP</topic>
          <message>JointValueVector</message>
          <task>RobotStatePublisher</task>
        </publish>
      </publishers>
    </node>
  </nodes>
</experimot_config>