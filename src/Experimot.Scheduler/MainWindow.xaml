<Window x:Class="Experimot.Scheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Scheduler Test" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <!--<RowDefinition></RowDefinition>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="button1" Width="100" Margin="10" Click="ClickButton" Tag="1">Task1</Button>
            <Button Width="100" Margin="10" Click="ClickButton" Tag="2">Task2</Button>
            <Button Width="100" Margin="10" Click="ClickButton" Tag="3">Task3</Button>
        </StackPanel>
        <RichTextBox x:Name="textBox" Grid.Row="1">
            
        </RichTextBox>
        <xctk:PropertyGrid ShowSortOptions="False" IsCategorized="False"
                       BorderThickness="0" 
                           IsReadOnly="True"
                       Background="#EEEEF2" x:Name="context" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" SelectedObject="{Binding Context}"></xctk:PropertyGrid>
        
    </Grid>
</Window>
