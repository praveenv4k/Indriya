<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>YES</tag>
        <one-of>
          <item> yes </item>
          <item> yeah </item>
          <item> yup </item>
        </one-of>
      </item>
      <item>
        <tag>NO</tag>
        <one-of>
          <item> no </item>
        </one-of>
      </item>
      <item>
        <tag>STOP</tag>
        <one-of>
          <item> stop </item>
          <item> exit </item>
        </one-of>
      </item>
      <item>
        <tag>START</tag>
        <one-of>
          <item> start </item>
          <item> begin </item>
        </one-of>
      </item>
      <item>
        <tag>WHITE</tag>
        <one-of>
          <item> whites </item>
        </one-of>
      </item>
      <item>
        <tag>YELLOW</tag>
        <one-of>
          <item> yellow </item>
        </one-of>
      </item>
      <item>
        <tag>RED</tag>
        <one-of>
          <item> red </item>
        </one-of>
      </item>
      <item>
        <tag>GREEN</tag>
        <one-of>
          <item> green </item>
        </one-of>
      </item>
      <item>
        <tag>BLUE</tag>
        <one-of>
          <item> blue </item>
        </one-of>
      </item>
      <item>
        <tag>ORANGE</tag>
        <one-of>
          <item> orange </item>
        </one-of>
      </item>
    </one-of>
  </rule>
  <rule id="greet">
    <one-of>
      <item>hello</item>
      <item>good afternoon</item>
      <item>good evening</item>
      <item>good bye</item>
      <item>bye</item>
    </one-of>
  </rule>
  <rule id="simple_questions">
    <one-of>
      <item>what is your name?</item>
      <item>what is the time now?</item>
      <item>how are you feeling today?</item>
    </one-of>
  </rule>
</grammar>