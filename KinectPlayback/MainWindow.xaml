<Window x:Class="KinectPlayback.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Playback" Height="500" Width="1050" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="playButton" Width="100" Margin="5" Click="Button_Click" Content="{Binding ButtonText}"/>
            <TextBlock Text="{Binding TimeStamp, StringFormat='TimeStamp: {0}'}" FontStyle="Oblique" FontSize="18" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        <Viewbox Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
            <Image Source="{Binding DepthImageSource}" Stretch="UniformToFill" />
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <Image Source="{Binding BodyImageSource}" Stretch="UniformToFill" />
        </Viewbox>
    </Grid>
</Window>
